#!/bin/zsh
autoload colors ; colors

# 1337 Geek
clear
toilet --metal "1337 GEEK"

# System Details
if [ -e ".sysdet" ]
then
  print "$fg[red]System Details$fg[yellow]"
  ~/.sysdet
fi

# Calendar
print "$fg[red]Today in history$fg[yellow]"
egrep -h -r "$(date +"%m/%d|%b* %d")" /usr/share/calendar/*

# Random quote
if [ -e '.quotes.txt' ]
then
  print "$fg_bold[blue]"
  shuf -n 1 .quotes.txt
fi
echo ""
